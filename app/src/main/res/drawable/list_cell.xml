<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="#AAA" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="3dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>